{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Graylog" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "buffered": true
        }
      },
      {
        "Name": "Graylog",
        "Args": {
          "hostnameOrAddress": "localhost",
          "port": "12201",
          "transportType": "Udp"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuingDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {
      "Application": "Sample"
    }

  },

  "AllowedHosts": "*",
  "ConnectionStrings": {
    "TrackMyStuffDB": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=TrackMyStuffDB;Integrated Security=True;"
  },
  "AWSServiceConfiguration": {
    "BucketName": "YOUR_BUCKET_NAME",
    "Access": "YOUR_ACCESS",
    "SecretyKey": "YOUR_SECRET_KEY"
  }
}